{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "required": [
        "id",
        "title",
        "description",
        "pageCount",
        "excerpt",
        "publishDate"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer"
        },
        "title": {
            "$id": "#/properties/title",
            "type": "string"
        },
        "description": {
            "$id": "#/properties/description",
            "type": "string"
        },
        "pageCount": {
            "$id": "#/properties/pageCount",
            "type": "integer"
        },
        "excerpt": {
            "$id": "#/properties/excerpt",
            "type": "string"
        },
        "publishDate": {
            "$id": "#/properties/publishDate",
            "type": "string"
        }
    }
}