        "anyOf": [
            {
                "$id": "#/items/anyOf/0",
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "description",
                    "pageCount",
                    "excerpt",
                    "publishDate"
                ],
                "properties": {
                    "id": {
                        "$id": "#/items/anyOf/0/properties/id",
                        "type": "integer"
                    },
                    "title": {
                        "$id": "#/items/anyOf/0/properties/title",
                        "type": "string"
                    },
                    "description": {
                        "$id": "#/items/anyOf/0/properties/description",
                        "type": "string"
                    },
                    "pageCount": {
                        "$id": "#/items/anyOf/0/properties/pageCount",
                        "type": "integer"
                    },
                    "excerpt": {
                        "$id": "#/items/anyOf/0/properties/excerpt",
                        "type": "string"
                    },
                    "publishDate": {
                        "$id": "#/items/anyOf/0/properties/publishDate",
                        "type": "string"
                    }
                }
            }
        ]
    }
}